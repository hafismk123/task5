<VirtualHost *:{{ http_port | default(80) }}>
    DocumentRoot {{ doc_root }}
    <Directory {{ doc_root }}>
        Options FollowSymLinks
        AllowOverride Limit Options FileInfo
        DirectoryIndex index.php
        Require all granted
    </Directory>
    <Directory {{ doc_root }}/wp-content>
        Options FollowSymLinks
        Require all granted
    </Directory>
</VirtualHost>
